#include "stdafx.h" 
#include <iostream>
using namespace std;

int _tmain()
{

	setlocale(LC_ALL, "russian");
	int height = 0;
	cout << "Введите высоту  равнобедренного треугольника: ";
	cin >> height;
	for (int i = 0; i < height; i++)
	{
		for (int j = 1; j < height - i; j++)
		{
			cout << ' ';
		}

		for (int j = height - 2 * i; j <= height; j++)
		{
			cout << '*';
		}
		cout << endl;
	}
  
	system("pause");
	return 0;
  
}
