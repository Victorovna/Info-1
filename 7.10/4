#include "stdafx.h"
#include <iostream>
using namespace std;

int _tmain()
{
	      setlocale(LC_ALL, "russian");
	      int num=0;
	      int rank=1;
	      int pr;
	      cout << "Введите трехзначное число"<<endl;
	      while ((num < 100) || (num>999))
      	{
            		cin >> num;
	      }
	    	        for (int i = 1; i <= 3; i++)
	            	{
		                   	rank = rank*(num%10);
		                  	num = num/10;
	            	}
	      cout << rank << endl;
  
	      system("pause");
	      return 0;
}
