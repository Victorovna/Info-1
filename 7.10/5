#include "stdafx.h"
#include <iostream>
using namespace std;

int _tmain()
{
	      int number2 = 1000;
      	int number1 = 0;
	      int number;
      	while (number2 < 9900)
      	{   number = number2;
		          for (int i = 1; i < 5; i++)
	          	{ 
	                		number1 = number1 + number % 10;
		                	number/= 10;
	          	}
	          	if (number1 == 17) 
	          	        {
                      cout << number2 << endl;
                       }
	           	number1 = 0;
	          	number2++;
      	}
        
      	system("pause");
      	return 0;
}
