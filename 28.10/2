#include "stdafx.h"
#include <iostream>
#include <iomanip>

using namespace std;

const unsigned int DIMENSION1 = 7;
const unsigned int DIMENSION2 = 7;

int _tmain()
{
	setlocale(LC_ALL, "russian");
	int **arr;
	arr = new int *[DIMENSION1];
	for (int i = 0; i < DIMENSION1; i++)
	{
		arr[i] = new int[DIMENSION2];
	}


	for (int i = 0; i < DIMENSION1; i++)
	{
		for (int j = 0; j < DIMENSION2; j++)
		{
			arr[i][j] = (i + 1) * 10 + (j + 1);
		}
	}


	for (int i = 0; i < DIMENSION1; i++)
	{
		for (int j = 0; j < DIMENSION2; j++)
		{
			cout << setw(4) << arr[i][j];
		}	
		cout << endl;
	}
	cout << endl;


	int sum = 0;
	for (int i = 0; i < DIMENSION1; i++)
	{
		for (int j = 0; j <= DIMENSION2; j++)
		{
			if (i == j)
			{
				sum = sum + arr[i][j];
			}
		}
	}

	cout << sum << endl;
	
		for (int i = 0; i < DIMENSION1; i++) 
		{
			delete[] arr[i];
		}
		delete[] arr;
    
		system("pause");
		return 0;
}
