#include "stdafx.h" 
#include <iostream> 
#include <cstring> 
using namespace std;

int _tmain()
{
	int n;
	int i;
	setlocale(LC_ALL, "Russian");
	cout << "Введите длину строки"<< endl;
	cin >> n;
	char* str;
	str = new char[n];
	cout << "Введите строкy" << endl;
	cin >> str;
	for (i = n; i >= 0; i--)
	{
		cout << str[i];
	}
	cout << endl;
  
	system("pause");
	return 0;
}
