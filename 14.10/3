#include "stdafx.h" 
#include <iostream> 
using namespace std; 

int _tmain() 
      { 
      setlocale(LC_ALL, "Russian"); 
      int x = 0; 
      int y = 0; 
      int z = 0; 
      float length = 0; 
      cout<<"Введите Х, Y, Z"; 
      cin >> x >> y >> z; 
      length = sqrt(x*x + y*y + z*z); 
      cout << "Длина вектора равна " << length<<endl; 
      
      system("pause"); 
      return 0; 
}
