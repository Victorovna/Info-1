#include "stdafx.h" 
#include <iostream> 
using namespace std;

int _tmain()
{
	setlocale(LC_ALL, "Russian");
	int i;
	int n;
	float sum;
	sum = 0;
	cout << "Введите кол-во элементов в массиве" << endl;
	cin >> n;
	float* arr = new float[n];
	cout << "Введите элемены массива" << endl;
	for (i = 0; i < n; i++)
  {
		    cin >> arr[i];
		    if (abs(arr[i]) > 3.2)
           {
		          	sum = sum + pow(arr[i], 2);
	       	}
	}
	cout << sum << endl;
  
	system("pause");
	return 0;
}
